{
   "git_url":"https://gitlab.com/libtiff/libtiff.git",
   "git_tag":"v4.2.0",
   "package_name":"tiff",
   "package_version":"4.2.0.15",
   "package_url":"http://www.simplesystems.org/libtiff/misc.html",
   "package_license":"libtiff",
   "package_license_file":"COPYRIGHT",
   "cmake_find_template":"FindTiff.cmake.template",
   "cmake_find_target":"Findtiff.cmake",
   "patch_file" : "tiff_o3de.patch",
   "additional_src_files":[
      "COPYRIGHT"
   ],
   "Platforms":{
      "Windows":{
         "Windows":{
            "custom_cmake_install":true,
            "cmake_generate_args":[
               "-G",
               "\"Visual Studio 16 2019\"",
               "-DCMAKE_CXX_STANDARD=17",
               "-DZLIB_ROOT=../../zlib-windows/zlib",
               "-DBUILD_SHARED_LIBS=OFF",
               "-Dld-version-script=OFF",
               "-Djpeg=OFF",
               "-DBUILD_TOOLS=OFF"
            ]
         },
         "Android":{
            "custom_cmake_install":true,
            "cmake_generate_args_debug":[
               "-G",
               "Ninja",
               "-DCMAKE_TOOLCHAIN_FILE=%LY_ANDROID_NDK_ROOT%\\build\\cmake\\android.toolchain.cmake",
               "-DANDROID_ABI=arm64-v8a",
               "-DCMAKE_BUILD_TYPE=Debug",
               "-DCMAKE_CXX_STANDARD=17",
               "-DZLIB_ROOT=../../zlib-android/zlib",
               "-DBUILD_SHARED_LIBS=OFF",
               "-Dld-version-script=OFF",
               "-Djpeg=OFF",
               "-DBUILD_TOOLS=OFF"
            ],
            "cmake_generate_args_release":[
               "-G",
               "Ninja",
               "-DCMAKE_TOOLCHAIN_FILE=%LY_ANDROID_NDK_ROOT%\\build\\cmake\\android.toolchain.cmake",
               "-DANDROID_ABI=arm64-v8a",
               "-DCMAKE_BUILD_TYPE=Release",
               "-DCMAKE_CXX_STANDARD=17",
               "-DZLIB_ROOT=../../zlib-android/zlib",
               "-DBUILD_SHARED_LIBS=OFF",
               "-Dld-version-script=OFF",
               "-DBUILD_TOOLS=OFF"
            ]
         }      
      },
      "Darwin":{
         "Mac":{
            "custom_cmake_install":true,
            "cmake_generate_args":[
               "-G",
               "Xcode",
               "-DCMAKE_OSX_DEPLOYMENT_TARGET=10.13",
               "-DCMAKE_CXX_STANDARD=17",
               "-DZLIB_ROOT=../../zlib-mac/zlib",
               "-DBUILD_SHARED_LIBS=OFF",
               "-Dld-version-script=OFF",
               "-Djpeg=OFF",
               "-DBUILD_TOOLS=OFF"
            ],
            "cmake_build_args":[
               "-j",
               "8"
            ]
         },
         "iOS":{
            "custom_cmake_install":true,
            "cmake_generate_args":[
               "-G",
               "Xcode",
               "-DCMAKE_SYSTEM_NAME=iOS",
               "-DCMAKE_OSX_ARCHITECTURES=arm64",
               "-DCMAKE_CXX_STANDARD=17",
               "-DZLIB_ROOT=../../zlib-ios/zlib",
               "-DBUILD_SHARED_LIBS=OFF",
               "-Dld-version-script=OFF",
               "-Djpeg=OFF",
               "-DBUILD_TOOLS=OFF"
            ],
            "cmake_build_args":[
               "-j",
               "8"
            ]
         }
      },
      "Linux":{
         "Linux":{
            "custom_cmake_install":true,
            "cmake_generate_args_debug":[
               "-G",
               "Unix\\ Makefiles",
               "-DCMAKE_C_COMPILER=gcc",
               "-DCMAKE_BUILD_TYPE=Debug",
               "-DCMAKE_CXX_STANDARD=17",
               "-DZLIB_ROOT=../../zlib-linux/zlib",
               "-DBUILD_SHARED_LIBS=OFF",
               "-Dld-version-script=OFF",
               "-Djpeg=OFF",
               "-DBUILD_TOOLS=OFF"
            ],
            "cmake_generate_args_release":[
               "-G",
               "Unix\\ Makefiles",
               "-DCMAKE_C_COMPILER=gcc",
               "-DCMAKE_BUILD_TYPE=Release",
               "-DCMAKE_CXX_STANDARD=17",
               "-DZLIB_ROOT=../../zlib-android/zlib-linux",
               "-DBUILD_SHARED_LIBS=OFF",
               "-Dld-version-script=OFF",
               "-Djpeg=OFF",
               "-DBUILD_TOOLS=OFF"
            ],
            "cmake_build_args":[
               "-j",
               "4"
            ]
         }
      }
   }
}